
<table class="table table-hover table-condensed" width="100%">
    <tr>
        <th>Composition / Title <br> Composer / Author</th>
        <th>Publisher <br> Editor</th>
        <th>Format <br> Price</th>
        <th>Date <br> &nbsp;</th>
    </tr>

<% @books.each do |book| %>

    <tr>
        <td><%= book.composition %> <br> <%= book.composer %></td>
        <td><%= book.edition %> <br> <%= book.editor %></td>
        <td><%= book.type %> <br> <%= "%.2f" % book.purchase_price %></td>
        <td><small><%= book.created_at %></small> <br> <small><a class="text-info" href="/<%= book.id %>">edit</a></small></td>
    </tr>

<% end %>
</table>
